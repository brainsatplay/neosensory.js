{
    "source": {
        "includePattern": ".+\\.(js(doc|x)?|mjs)$",   // Only process file ending in .js, .jsdoc or .jsx
        "include": ["./src","./README.md"],        // Check all folders.
        "exclude": ["node_modules"]             
    },
    "recurseDepth": 10,                         // Only go 10 levels deep.
    "opts": {
        "destination": "./docs/reference",               // Where I want my docs to be generated.
        "recurse": true
    },
    "templates": {
        "default": {
            "staticFiles": {
            }
        }
    }
}